<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.project.goosegame.view.activity.PlayersActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/global_margin"
        android:focusedByDefault="true">

        <LinearLayout
            android:id="@+id/players_layout_player1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/players_image_player1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/pion1" />

            <EditText
                android:id="@+id/players_name_player1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:hint="@string/player_1"
                android:inputType="textPersonName"
                android:textColor="@color/colorSecondary"
                android:textSize="@dimen/players_text_name" />

            <NumberPicker
                android:id="@+id/players_answer_time_player1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:solidColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/players_layout_player2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/players_layout_player1">

            <ImageButton
                android:id="@+id/players_image_player2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/pion2" />

            <EditText
                android:id="@+id/players_name_player2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:hint="@string/player_2"
                android:inputType="textPersonName"
                android:textColor="@color/colorSecondary"
                android:textSize="@dimen/players_text_name" />

            <NumberPicker
                android:id="@+id/players_answer_time_player2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:solidColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/players_layout_player3"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/players_layout_player2">

            <ImageButton
                android:id="@+id/players_image_player3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/pion3" />

            <EditText
                android:id="@+id/players_name_player3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:hint="@string/player_3"
                android:inputType="textPersonName"
                android:textColor="@color/colorSecondary"
                android:textSize="@dimen/players_text_name" />

            <NumberPicker
                android:id="@+id/players_answer_time_player3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:solidColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/players_layout_player4"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/players_layout_player3">

            <ImageButton
                android:id="@+id/players_image_player4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/pion4" />

            <EditText
                android:id="@+id/players_name_player4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:hint="@string/player_4"
                android:inputType="textPersonName"
                android:textColor="@color/colorSecondary"
                android:textSize="@dimen/players_text_name" />

            <NumberPicker
                android:id="@+id/players_answer_time_player4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:solidColor="@color/colorPrimary" />

        </LinearLayout>

        <Button
            android:id="@+id/players_button_play"
            android:layout_width="@dimen/players_button_launch_game_width"
            android:layout_height="@dimen/players_button_launch_game_height"
            android:layout_gravity="center"
            android:background="@drawable/rectangle_button_color_select"
            android:text="@string/players_button_launch_game"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/players_text_launch_game"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/players_layout_player4"
            android:layout_marginTop="20dp"/>


    </android.support.constraint.ConstraintLayout>
</ScrollView>

