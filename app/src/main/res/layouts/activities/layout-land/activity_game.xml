<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/game_layout_case"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/game_layout_pion"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/game_pion1"
            android:layout_width="@dimen/game_pion_size"
            android:layout_height="@dimen/game_pion_size" />

        <ImageView
            android:id="@+id/game_pion2"
            android:layout_width="@dimen/game_pion_size"
            android:layout_height="@dimen/game_pion_size" />

        <ImageView
            android:id="@+id/game_pion3"
            android:layout_width="@dimen/game_pion_size"
            android:layout_height="@dimen/game_pion_size" />

        <ImageView
            android:id="@+id/game_pion4"
            android:layout_width="@dimen/game_pion_size"
            android:layout_height="@dimen/game_pion_size" />

    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/game_layout_question4"
        android:layout_width="@dimen/game_popup_width"
        android:layout_height="@dimen/game_popup_height"
        android:background="@drawable/layout_background"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/game_lib_question4"
            android:layout_width="@dimen/game_popup_text_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/game_popup_text_size"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"  />

        <Button
            android:id="@+id/game_button_question4_answer1"
            android:layout_width="@dimen/game_popup_button_width"
            android:layout_height="@dimen/game_popup_button_height"
            android:textSize="@dimen/game_popup_button_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/game_button_question4_answer3"
            android:layout_margin="15dp" />

        <Button
            android:id="@+id/game_button_question4_answer2"
            android:layout_width="@dimen/game_popup_button_width"
            android:layout_height="@dimen/game_popup_button_height"
            android:textSize="@dimen/game_popup_button_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/game_button_question4_answer4"
            android:layout_margin="15dp" />

        <Button
            android:id="@+id/game_button_question4_answer3"
            android:layout_width="@dimen/game_popup_button_width"
            android:layout_height="@dimen/game_popup_button_height"
            android:textSize="@dimen/game_popup_button_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="15dp" />

        <Button
            android:id="@+id/game_button_question4_answer4"
            android:layout_width="@dimen/game_popup_button_width"
            android:layout_height="@dimen/game_popup_button_height"
            android:textSize="@dimen/game_popup_button_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="15dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/game_layout_question3"
        android:layout_width="@dimen/game_popup_width"
        android:layout_height="@dimen/game_popup_height"
        android:background="@drawable/layout_background"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/game_lib_question3"
            android:layout_width="@dimen/game_popup_text_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/game_popup_text_size"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent" />

        <Button
            android:id="@+id/game_button_question3_answer1"
            android:layout_width="@dimen/game_popup_button_width"
            android:layout_height="@dimen/game_popup_button_height"
            android:textSize="@dimen/game_popup_button_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/game_button_question3_answer2"
            app:layout_constraintBottom_toTopOf="@+id/game_button_question3_answer3"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/game_button_question3_answer2"
            android:layout_width="@dimen/game_popup_button_width"
            android:layout_height="@dimen/game_popup_button_height"
            android:textSize="@dimen/game_popup_button_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/game_button_question3_answer1"
            app:layout_constraintBottom_toTopOf="@+id/game_button_question3_answer3"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/game_button_question3_answer3"
            android:layout_width="@dimen/game_popup_button_width"
            android:layout_height="@dimen/game_popup_button_height"
            android:textSize="@dimen/game_popup_button_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/game_layout_question2"
        android:layout_width="@dimen/game_popup_width"
        android:layout_height="@dimen/game_popup_height"
        android:background="@drawable/layout_background"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/game_lib_question2"
            android:layout_width="@dimen/game_popup_text_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/game_popup_text_size"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent" />

        <Button
            android:id="@+id/game_button_question2_answer1"
            android:layout_width="@dimen/game_popup_button_width"
            android:layout_height="@dimen/game_popup_button_height"
            android:textSize="@dimen/game_popup_button_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/game_button_question2_answer2"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/game_button_question2_answer2"
            android:layout_width="@dimen/game_popup_button_width"
            android:layout_height="@dimen/game_popup_button_height"
            android:textSize="@dimen/game_popup_button_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/game_button_question2_answer1"
            android:layout_margin="10dp" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/game_text_game_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/game_popup_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/game_layout_dice"
        android:layout_width="@dimen/game_popup_width"
        android:layout_height="@dimen/game_popup_height"
        android:visibility="gone"
        android:background="@drawable/layout_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/game_text_dice_player"
            android:layout_width="@dimen/game_popup_text_width"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/game_popup_text_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/game_button_dice_launch"
            android:layout_width="@dimen/game_popup_button_width"
            android:layout_height="@dimen/game_popup_button_height"
            android:text="@string/game_popup_button_launch"
            android:textSize="@dimen/game_popup_button_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/game_layout_bonus_malus"
        android:layout_width="@dimen/game_popup_width"
        android:layout_height="@dimen/game_popup_width"
        android:focusableInTouchMode="false"
        android:visibility="gone"
        android:background="@drawable/layout_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/game_text_title_bonus_malus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bonus / Malus"
            android:textAlignment="center"
            android:textSize="@dimen/game_popup_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/game_text_result_bonus_malus"
            android:layout_width="@dimen/game_popup_text_width"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/game_popup_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/game_text_title_bonus_malus"
            app:layout_constraintBottom_toTopOf="@+id/game_button_bonus_malus"/>

        <Button
            android:id="@+id/game_button_bonus_malus"
            android:layout_width="@dimen/game_popup_button_width"
            android:layout_height="@dimen/game_popup_button_height"
            android:text="@string/game_popup_button_continue"
            android:textSize="@dimen/game_popup_button_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/game_layout_result"
        android:layout_width="@dimen/game_popup_width"
        android:layout_height="@dimen/game_popup_height"
        android:visibility="gone"
        android:focusableInTouchMode="false"
        android:background="@drawable/layout_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/game_text_result"
            android:layout_width="@dimen/game_popup_text_width"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/game_popup_text_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/game_button_result_continue"
            android:layout_width="@dimen/game_popup_button_width"
            android:layout_height="@dimen/game_popup_button_height"
            android:text="@string/game_popup_button_continue"
            android:textSize="@dimen/game_popup_button_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/game_layout_end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundPopup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/game_text_end"
            android:layout_width="@dimen/game_popup_text_width"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/game_popup_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/game_button_end_new"/>

        <Button
            android:id="@+id/game_button_end_new"
            android:layout_width="@dimen/game_popup_button_width"
            android:layout_height="@dimen/game_popup_button_height"
            android:text="@string/game_popup_button_new_game"
            android:textSize="@dimen/game_popup_button_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/game_coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" >

    </android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>