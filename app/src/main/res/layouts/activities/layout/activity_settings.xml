<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/settings_button_primary"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settings_button_secundary"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_button_primary" />

    <Button
        android:id="@+id/settings_button_select"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_button_secundary" />

    <Spinner
        android:id="@+id/settings_spinner"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_button_select" />

    <TextView
        android:id="@+id/settings_text_view_font_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/settings_text_primary_color"
        android:textSize="@dimen/global_text"
        app:layout_constraintBottom_toBottomOf="@+id/settings_button_primary"
        app:layout_constraintEnd_toStartOf="@+id/settings_button_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settings_button_primary" />

    <TextView
        android:id="@+id/settings_text_view_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/settings_text_secundary_color"
        android:textSize="@dimen/global_text"
        app:layout_constraintBottom_toBottomOf="@+id/settings_button_secundary"
        app:layout_constraintEnd_toStartOf="@+id/settings_button_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settings_button_secundary" />

    <TextView
        android:id="@+id/settings_text_view_secundary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/settings_text_select_color"
        android:textSize="@dimen/global_text"
        app:layout_constraintBottom_toBottomOf="@+id/settings_button_select"
        app:layout_constraintEnd_toStartOf="@+id/settings_button_secundary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settings_button_select" />


    <TextView
        android:id="@+id/settings_text_view_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/settings_text_font_size"
        android:textSize="@dimen/global_text"
        app:layout_constraintBottom_toBottomOf="@+id/settings_spinner"
        app:layout_constraintEnd_toStartOf="@+id/settings_button_select"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settings_spinner" />


</android.support.constraint.ConstraintLayout>